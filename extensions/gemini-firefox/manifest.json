{
    "manifest_version": 3,
    "name": "Gemini YouTube Summarizer",
    "version": "1.0",
    "description": "Summarize YouTube videos using Google Gemini.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "scripts": [
            "SettingsService.js",
            "GeminiService.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "SettingsService.js",
                "TranscriptService.js",
                "content.js"
            ],
            "css": [
                "css/content-styles.css"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "gemini-yt-summarizer@example.com",
            "strict_min_version": "109.0"
        }
    }
}